<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PO_WIZ_gra_karciana.Views.GameOverWindow"
        Title="Koniec gry"
        Width="400" Height="300"
        Background="#1B1B1B"
        CanResize="False">

	<Border Background="#2C2C2C" CornerRadius="12" Padding="30" Margin="20">
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
			<TextBlock x:Name="MessageText"
                       FontSize="22"
                       Foreground="White"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
				<Button Content="Zagraj ponownie"
                        Width="140" Height="40"
                        Background="ForestGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Restart_Click"/>
				<Button Content="WyjdÅº"
                        Width="100" Height="40"
                        Background="#800000"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Exit_Click"/>
			</StackPanel>
		</StackPanel>
	</Border>
</Window>
